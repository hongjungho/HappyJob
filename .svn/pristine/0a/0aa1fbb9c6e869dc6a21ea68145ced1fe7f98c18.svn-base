	this.gfn_serviceCall("selectSubjectList"); //사업과제 목록 조회
}


this.fn_status = function(row,col)
{

	//trace(this.dsTaskList.getRowType(row));
	
	if(this.dsSubjectList.getRowType(row) == "2"){
		return "신규";
	}else if(this.dsSubjectList.getRowType(row) == "4"){
		return "수정";
	}
	
}







